{
  "name": "tsc",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/tsc/src",
  "projectType": "library",
  "targets": {
    "build-base": {
      "executor": "@nx/js:tsc",
      "options": {
        "assets": [
          {
            "input": "packages/tsc",
            "glob": "**/@(files|files-angular)/**",
            "output": "/"
          },
          {
            "input": "packages/tsc",
            "glob": "**/files/**/.gitkeep",
            "output": "/"
          },
          {
            "input": "packages/tsc",
            "glob": "**/*.json",
            "ignore": ["**/tsconfig*.json", "project.json", ".eslintrc.json"],
            "output": "/"
          },
          {
            "input": "packages/tsc",
            "glob": "**/*.js",
            "ignore": ["**/jest.config.js"],
            "output": "/"
          },
          {
            "input": "packages/tsc",
            "glob": "**/*.d.ts",
            "output": "/"
          },
          {
            "input": "",
            "glob": "LICENSE",
            "output": "/"
          }
        ]
      }
    },
    "build": {
      "executor": "nx:run-commands",
      "outputs": ["{workspaceRoot}/build/packages/tsc"],
      "options": {
        "command": "node ./scripts/copy-readme.js tsc"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"]
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "packages/tsc/jest.config.ts"
      }
    }
  },
  "tags": []
}
